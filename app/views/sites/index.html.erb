<div class="container mt-5">
  <h1 class="mb-4">Tracked Sites</h1>
  <div class="row">
    <% @site_visits.each do |page_url, visit_count| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title"><%= page_url %></h5>
          </div>
          <div class="card-body">
            <p class="card-text">
              <strong>Visits:</strong> <%= visit_count %><br>
              <strong>Average Duration:</strong> <%= @average_durations[page_url].to_i %> milliseconds
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>